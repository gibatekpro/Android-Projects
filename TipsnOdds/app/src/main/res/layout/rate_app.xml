<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tomorrow_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gibatekpro.tipsnodds.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/encourage_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="ENCOURAGE THE DEVELOPER"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/rate_texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="Kindly rate this app to support the developer. It is quick and easy."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="17sp" />


            <Button
                android:id="@+id/rate_the_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/rate_app"
                android:background="@drawable/textviewimei"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/thanks_for_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="Thanks For Your Support"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="25sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
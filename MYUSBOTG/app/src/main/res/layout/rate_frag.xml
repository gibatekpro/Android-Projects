<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gibatekpro.myusbotg.MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:fillViewport="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/encourage_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@color/colorBackground"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="@string/Encourage_developer"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/rate_texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorBackground"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="@string/rate_text"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="17sp" />


            <Button
                android:id="@+id/rate_the_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/rate_app"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/thanks_for_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/colorBackground"
                android:enabled="true"
                android:focusable="true"
                android:freezesText="true"
                android:gravity="center"
                android:longClickable="true"
                android:text="@string/thanks_for_your_support"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textIsSelectable="true"
                android:textSize="25sp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
